<div class="card shadow-sm p-4">
  <h2 class="mb-4"><%= @exercise.name %></h2>

  <ul class="list-group mb-4">
    <li class="list-group-item"><strong>Weight:</strong> <%= @exercise.weight %> kg</li>
    <li class="list-group-item"><strong>Sets:</strong> <%= @exercise.sets %></li>
    <li class="list-group-item"><strong>Reps:</strong> <%= @exercise.reps %></li>
  </ul>

  <div class="d-flex justify-content-between">
    <%= link_to "Edit", edit_exercise_path(@exercise), class: "btn btn-warning" %>
    <%= link_to "Back", exercises_path, class: "btn btn-secondary" %>
  </div>
</div>
