<%= form_with(model: exercise, local: true, class: "card p-4 shadow-sm") do |form| %>
  <% if exercise.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(exercise.errors.count, "error") %> prevented this exercise from being saved:</h5>
      <ul>
        <% exercise.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= form.label :weight, class: "form-label" %>
      <%= form.number_field :weight, class: "form-control", step: 0.5 %>
    </div>

    <div class="col-md-4 mb-3">
      <%= form.label :sets, class: "form-label" %>
      <%= form.number_field :sets, class: "form-control" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= form.label :reps, class: "form-label" %>
      <%= form.number_field :reps, class: "form-control" %>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <%= form.submit class: "btn btn-success" %>
    <%= link_to "Back", exercises_path, class: "btn btn-secondary" %>
  </div>
<% end %>
